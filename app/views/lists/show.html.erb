<h1 class="page-title">🎬 「<%= @list.name %>」のブックマーク</h1>

<div class="card-grid">
  <% @list.bookmarks.each do |bookmark| %>
    <div class="movie-card">
      <img src="<%= bookmark.movie.poster_url %>" alt="<%= bookmark.movie.title %>" class="poster">

      <div class="movie-info">
        <h2><%= bookmark.movie.title %> ・ <%= bookmark.movie.rating %> ⭐</h2>
        <p><%= bookmark.movie.overview %></p>
        <blockquote><%= bookmark.comment %></blockquote>
        <%= button_to "削除", bookmark_path(bookmark), method: :delete, class: "delete-btn", data: { turbo_confirm: "本当に削除しますか？" } %>
      </div>
    </div>
  <% end %>
</div>

</div>

<h2 class="form-title">🎴 新しいブックマーク</h2>

<div class="bookmark-form-wrapper">
  <%= simple_form_for [@list, @bookmark] do |f| %>
    <%= f.association :movie, label: "映画を選ぶ" %>
    <%= f.input :comment, label: "コメント" %>
    <%= f.submit "追加する", class: "btn-primary" %>
  <% end %>
</div>

<div class="bookmark-links">
  <%= link_to "⬅ リスト一覧に戻る", lists_path, class: "btn-secondary" %>
</div>
